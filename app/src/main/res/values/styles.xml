<resources>

    <style name="Theme.Base" parent="Theme.AppCompat.Light"></style>

    <style name="Theme.Base.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Base.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Base.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Base.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Base.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="roundButtonTextStyle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
